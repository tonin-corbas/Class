<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Comanda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include("header.ejs") %>
    <div class="container">
        <h1 class="text-center">Actualizar Comanda</h1>
        <form action="/comandasUpdate" method="post" class="container-sm mt-5 text-center">
            <div class="mb-3" hidden aria-label="">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" name="id" required hidden value="<%= comanda.id %>">
            </div>
            <div class="mb-3">
                <label for="Usuarios_id" class="form-label">Nombre de Usuario</label>
                <select class="form-select" name="Usuarios_id" required>
                    <% usuarios.forEach((usuario) => { %>
                        <option value="<%= usuario.id %>" <%= usuario.id == comanda.Usuario_id ? 'selected' : '' %>>
                            <%= usuario.Nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="Producto_id" class="form-label">Nombre del Producto</label>
                <select class="form-select" name="Producto_id" required>
                    <% productos.forEach((producto) => { %>
                        <option value="<%= producto.id %>" <%= producto.id == comanda.Producto_id ? 'selected' : '' %>>
                            <%= producto.nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%- include("footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
